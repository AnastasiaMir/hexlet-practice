		<!-- По клику на логин в правом верхнем углу
		появляется это модальное окно -->
		<div x-show="open" @click.outside="open = false" x-transition class="modal-personal">
			<table class="modal-personal__table">

				<!-- В таблице три части с данными пользователя -->
				<caption class="modal-personal__user-name user-name">{{user.login}}</caption>

				<!-- Заголовок -->
				<tr class="modal-personal__login-row row-height">
					<th>Login</th>
			  	</tr>
			  	<tr>
					<!-- Сами данные -->
					<td class="user-name"><input :readonly="edit" type="text" x-model="login" ></td>
					<!-- Кнопка-иконка которая должна как-то поменять -->
					<td>
						<button @click="edit=false"  class="user-name__change-button">
							<img src="/assets/img/change-icon.svg" alt="">
						</button>
					</td>
			  	</tr>
			  	<tr class="modal-personal__email-row row-height">
					<th>Email</th>
			  	</tr>
			  	<tr>
					<td class="user-mail"><input :readonly="edit" type="email" value="Vasya Pupkin@gmail.com" name="user_email" ></td>
					<td>
						<button  @click="edit=false" class="user-mail__change-button">
							<img src="/assets/img/change-icon.svg" alt="">
						</button>
					</td>
			  	</tr>

			  	<tr class="modal-personal__password-row row-height">
					<th>New password</th> 
			  	</tr>

				<tr>
					<td class="user-password"><input :readonly="edit" type="text" value="*************" name="user_password"></td>
					<td>
						<button  @click="edit=false" class="user-password__change-button">
							<img src="/assets/img/change-icon.svg" alt="">
						</button>
					</td>
			  	</tr>

			</table>

			<!-- Кнопка подтверждающая изменения в данных -->
			<button class="modal-personal__change-button">
				Обновить
			</button>

		</div>